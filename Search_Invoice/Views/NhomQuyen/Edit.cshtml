@model Search_Invoice.Data.Domain.QuyenHan

@{
  ViewBag.Title = "Cập nhật quyền";
  Layout = "~/Views/Shared/_Danhmuc.cshtml";
}

@section BoxBody {

  <div class="page-content">
    <div class="page-header">
      <h1>Cập nhật quyền: @Model.MaQuyen</h1>
    </div>

    @using (Html.BeginForm("Edit", "NhomQuyen"))
    {
      @Html.AntiForgeryToken()

      <div class="form-horizontal">
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.MaQuyen, htmlAttributes: new {@class = "control-label col-md-2"})

        <div class="form-group">
          <label class="control-label col-md-2">Tên quyền</label>
          <div class="col-md-10">
            @Html.EditorFor(model => model.TenQuyen, new {htmlAttributes = new {@class = "form-control"}})
            @Html.ValidationMessageFor(model => model.TenQuyen, "", new {@class = "text-danger"})
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Cập nhật" class="btn btn-success  pull-right"/>
          </div>
        </div>
      </div>
    }

    <div>
      <a href="@Url.Action("Index", "NhomQuyen")" class="btn btn-default">Về trang danh sách</a>
    </div>
  </div>

}