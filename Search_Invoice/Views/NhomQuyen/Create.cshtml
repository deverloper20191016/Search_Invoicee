@model Search_Invoice.Data.Domain.QuyenHan

@{
  ViewBag.Title = "Thêm mới quyền";
  Layout = "~/Views/Shared/_Danhmuc.cshtml";
}

@section BoxBody {

  <div class="page-content">
    <div class="page-header">
      <h1>Thêm mới quyền</h1>
    </div>

    @using (Html.BeginForm("Create", "NhomQuyen"))
    {
      @Html.AntiForgeryToken()

      <div class="form-horizontal">
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger col-md-offset-2"})
        <div class="form-group">
          <label class="control-label col-md-2">Mã quyền</label>
          <div class="col-md-10">
            @Html.TextBoxFor(model => model.MaQuyen, new {@class = "form-control"})
            @Html.ValidationMessageFor(model => model.MaQuyen, "", new {@class = "text-danger"})
          </div>
        </div>

        <div class="form-group">
          <label class="control-label col-md-2">Tên quyền</label>
          <div class="col-md-10">
            @Html.EditorFor(model => model.TenQuyen, new {htmlAttributes = new {@class = "form-control"}})
            @Html.ValidationMessageFor(model => model.TenQuyen, "", new {@class = "text-danger"})
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm mới" class="btn btn-success  pull-right"/>
          </div>
        </div>
      </div>
    }

    <div>
      <a href="@Url.Action("Index", "NhomQuyen")" class="btn btn-default">Về trang danh sách</a>
    </div>
  </div>

}